{
  "name": "ecozbite",
  "version": "1.0.0",
  "description": "Food waste reduction platform connecting supermarkets with customers",
  "main": "server.js",
  "scripts": {
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "server": "cd backend && npm run dev",
    "client": "cd frontend && npm start",
    "build": "cd frontend && npm run build",
    "install-all": "npm install && cd backend && npm install && cd ../frontend && npm install",
    "start": "cd backend && npm start"
  },
  "keywords": [
    "food-waste",
    "sustainability",
    "discount",
    "supermarket"
  ],
  "author": "EcoZBite Team",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "dependencies": {
    "react-toastify": "^11.0.5"
  }
}
